<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background">

    <!-- Etiqueta ID del Almuerzo -->
    <TextView
        android:id="@+id/tvIDAlmuerzo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID del Almuerzo: "
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Campo editable ID del Almuerzo -->
    <EditText
        android:id="@+id/etIDAlmuerzo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColorHint="@color/white"
        android:hint="Ingrese ID del Almuerzo"
        android:textSize="12sp"
        android:inputType="number"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvIDAlmuerzo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Etiqueta ID del Usuario -->
    <TextView
        android:id="@+id/tvIDUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID del Usuario: "
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/etIDAlmuerzo"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Campo editable ID del Usuario -->
    <EditText
        android:id="@+id/etIDUsuario"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColorHint="@color/white"
        android:hint="Ingrese ID del Usuario"
        android:textSize="12sp"
        android:inputType="number"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvIDUsuario"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Etiqueta Fecha del Almuerzo -->
    <TextView
        android:id="@+id/tvFechaAlmuerzo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha del Almuerzo: "
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/etIDUsuario"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Campo editable Fecha del Almuerzo -->
    <EditText
        android:id="@+id/etFechaAlmuerzo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColorHint="@color/white"
        android:hint="Ingrese Fecha del Almuerzo"
        android:textSize="12sp"
        android:inputType="date"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvFechaAlmuerzo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Etiqueta Menú del Almuerzo -->
    <TextView
        android:id="@+id/tvMenuAlmuerzo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menú del Almuerzo: "
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/etFechaAlmuerzo"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/spinnerMenuAlmuerzo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvMenuAlmuerzo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnGuardarAlmuerzo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="Guardar Almuerzo"
        app:layout_constraintTop_toBottomOf="@+id/spinnerMenuAlmuerzo"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="122dp" />

    <Button
        android:id="@+id/btnVerListado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Ver Listado"
        app:layout_constraintTop_toBottomOf="@+id/btnGuardarAlmuerzo"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="145dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
